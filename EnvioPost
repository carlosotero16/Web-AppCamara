<?php
	// requires php5
	define('https://github.com/carlosotero16/Web-AppCamara/tree/master/', 'images/');
	$img = $_POST['img'];
	$img = str_replace('data:image/png;base64,', '', $img);
	$img = str_replace(' ', '+', $img);
	$data = base64_decode($img);
	$file = UPLOAD_DIR . uniqid() . '.png';
	$success = file_put_contents($file, $data);
	print $success ? $file : 'No se pudo enviar la imagen.';
?>